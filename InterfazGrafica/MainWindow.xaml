<Window x:Class="InterfazGrafica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazGrafica"
        mc:Ignorable="d"
        Title="Mi primera ventana" Height="600" Width="900">
    <!-- Contenedor -->
    <StackPanel>
        <!--Texto plano-->
        <!--
        Orden de margenes
        Left, Top, Right, Bottom
        -->
        <TextBlock Margin="300,15,300,5">Correo:</TextBlock>
        <!--Caja para introducir texto-->
        <TextBox  Margin="300,0,300,15"></TextBox>

        <TextBlock Margin="300,0,300,5">Password:</TextBlock>
        <PasswordBox Margin=" 300,0,300,10"></PasswordBox>

        <Button Margin="350,0,350,0">Iniciar Sesion</Button>
        
    </StackPanel>
</Window>